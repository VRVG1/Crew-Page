            img="../../public/photo4.png"
            margin="separacion"
            mdMargin="mdSeparacion"
        />
        <Person
            title="Developer"
            name="Griff Richards"
            img="../../public/photo5.png"
            margin="separacion"
            mdMargin=""
        />
        <Person
            title="Developer"
            name="Stan john"
            img="../../public/photo6.png"
            margin="separacion"
            mdMargin=""
        />
    </div>
</div>
